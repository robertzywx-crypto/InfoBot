// --- MOTOR DE PENSAMENTO DO INFORBOT ---
async function solve(msg) {
    let raw = msg.toLowerCase().trim().normalize("NFD").replace(/[\u0300-\u036f]/g, "").replace(/[?!]/g, "");
    
    // 1. PRIORIDADE: MATEM√ÅTICA (Entende x, :, *, / e sqrt)
    if (/[0-9]/.test(raw) && /[\+\-\*\/\^\(\)Vvx:]/.test(raw)) {
        try {
            let exp = raw.replace(/x/g, "*").replace(/v/g, "sqrt").replace(/:/g, "/").replace(/,/g, ".");
            let res = math.evaluate(exp);
            return botSay(`Roberto, o resultado desse c√°lculo √©: **${res}**.`);
        } catch(e) {}
    }

    // 2. PRIORIDADE: TREINO (Busca palavra-chave em qualquer parte da frase)
    for (let key in INFORBOT_DATA.treino) {
        if (raw.includes(key)) {
            return botSay(INFORBOT_DATA.treino[key]);
        }
    }

    // 3. PESQUISA WIKIPEDIA (11 Idiomas)
    if (raw.includes("o que e") || raw.includes("quem e") || raw.includes("sobre") || raw.split(" ").length <= 2) {
        setLoad(true);
        let q = raw.replace(/o que e|quem e|sobre/g, "").trim();
        const langs = ['pt', 'en', 'es', 'fr', 'de', 'it', 'ru', 'ja', 'zh', 'nl', 'pl'];
        for (let l of langs) {
            try {
                const r = await fetch(`https://${l}.wikipedia.org/api/rest_v1/page/summary/${encodeURIComponent(q)}?origin=*`);
                if (r.ok) {
                    const d = await r.json(); setLoad(false);
                    return botSay(`**Inforbot Wiki (${l.toUpperCase()}):** ${d.extract}`);
                }
            } catch(e){}
        }
        setLoad(false);
        return botSay("Procurei. Mas ainda est√° escondido de mim.");
    }

    // 4. MOLDES INTELIGENTES (Para frases sem resposta direta e longas)
    if (raw.split(" ").length >= 4) {
        let p = raw.split(" ").filter(w => w.length > 3);
        let f = p.length > 0 ? p[Math.floor(Math.random()*p.length)] : "isso";
        let res = INFORBOT_DATA.moldes.ini[Math.floor(Math.random()*INFORBOT_DATA.moldes.ini.length)] + 
                  f + 
                  INFORBOT_DATA.moldes.meio[Math.floor(Math.random()*INFORBOT_DATA.moldes.meio.length)] + 
                  INFORBOT_DATA.moldes.fim[Math.floor(Math.random()*INFORBOT_DATA.moldes.fim.length)];
        return botSay(res);
    }

    // 5. FALHA FINAL
    botSay("Procurei. Mas ainda est√° escondido de mim.");
}

function botSay(txt) {
    const chat = document.getElementById("chat");
    const d = document.createElement("div");
    d.className = "msg-bot";
    d.innerHTML = `<div class="bubble">${txt}</div>`;
    chat.appendChild(d);
    chat.scrollTop = chat.scrollHeight;
}

function userSay(txt) {
    const chat = document.getElementById("chat");
    const d = document.createElement("div");
    d.className = "msg-user";
    d.innerHTML = `<div class="bubble">${txt}</div>`;
    chat.appendChild(d);
    chat.scrollTop = chat.scrollHeight;
}

function send() {
    const i = document.getElementById("userInput");
    if (!i.value) return;
    userSay(i.value);
    solve(i.value);
    i.value = "";
}

function trigger(type) {
    if (type === 'piada') {
        userSay("Segure o riso que l√° vem piada");
        botSay("Preparando uma l√≥gica humor√≠stica...");
        setTimeout(() => botSay(INFORBOT_DATA.piadas[Math.floor(Math.random()*INFORBOT_DATA.piadas.length)]), 800);
    } else {
        userSay("Sabia que o mundo √© mais estranho do que parece?");
        botSay("Acessando fatos curiosos...");
        setTimeout(() => botSay(INFORBOT_DATA.curiosidades[Math.floor(Math.random()*INFORBOT_DATA.curiosidades.length)]), 800);
    }
}

function theme(m) {
    if (m === 'light') document.body.classList.add('light-mode');
    else document.body.classList.remove('light-mode');
}

function setLoad(s) {
    document.getElementById("loading").style.display = s ? "flex" : "none";
}

function mic() {
    const rec = new (window.SpeechRecognition || window.webkitSpeechRecognition)();
    rec.lang = 'pt-BR'; rec.start();
    rec.onresult = (e) => { document.getElementById("userInput").value = e.results[0][0].transcript; send(); };
}

document.getElementById("userInput").addEventListener("keypress", (e) => { if (e.key === "Enter") send(); });
</script>
</body>
</html>
