// --- MOTOR DE INTELIG√äNCIA ---
async function think(msg) {
    let raw = msg.toLowerCase().trim().normalize("NFD").replace(/[\u0300-\u036f]/g, "").replace(/[?!.]/g, "");
    
    // 1. MATEM√ÅTICA SUPER AVAN√áADA (PRIORIDADE 1)
    if (/[0-9]/.test(raw) && /[\+\-\*\/\^\(\)Vv]/.test(raw)) {
        try {
            let exp = raw.replace(/x/g, "*").replace(/v/g, "sqrt").replace(/:/g, "/").replace(/,/g, ".");
            let res = math.evaluate(exp);
            return botSay(`Roberto, a solu√ß√£o l√≥gica para esse c√°lculo √©: **${res}**.`);
        } catch(e) {}
    }

    // 2. TREINO (PRIORIDADE 2 - RECONHECE EM QUALQUER LUGAR DA FRASE)
    for (let key in DATA.treino) {
        if (raw.includes(key)) {
            return botSay(DATA.treino[key]);
        }
    }

    // 3. PESQUISA WIKIPEDIA (11 L√çNGUAS)
    if (raw.includes("o que e") || raw.includes("quem e") || raw.includes("sobre") || raw.split(" ").length <= 2) {
        setLoading(true);
        let q = raw.replace(/o que e|quem e|sobre/g, "").trim();
        const langs = ['pt', 'en', 'es', 'fr', 'de', 'it', 'ru', 'ja', 'zh', 'nl', 'pl'];
        for (let l of langs) {
            try {
                const r = await fetch(`https://${l}.wikipedia.org/api/rest_v1/page/summary/${encodeURIComponent(q)}?origin=*`);
                if (r.ok) {
                    const d = await r.json(); setLoading(false);
                    return botSay(`**Inforbot Wiki (${l.toUpperCase()}):** ${d.extract}`);
                }
            } catch(e){}
        }
        setLoading(false);
        return botSay("Procurei. Mas ainda est√° escondido de mim.");
    }

    // 4. MOLDES INTELIGENTES (S√ì USA SE A FRASE FOR LONGA E SEM RESPOSTA DIRETA)
    if (raw.split(" ").length >= 4) {
        let p = raw.split(" ").filter(w => w.length > 3);
        let f = p.length > 0 ? p[Math.floor(Math.random()*p.length)] : "isso";
        let res = DATA.moldes[Math.floor(Math.random()*DATA.moldes.length)] + 
                  f + 
                  UI_LOGIC.meio[Math.floor(Math.random()*UI_LOGIC.meio.length)] + 
                  UI_LOGIC.fim[Math.floor(Math.random()*UI_LOGIC.fim.length)];
        return botSay(res);
    }

    // 5. FALHA (SE N√ÉO ACHAR NADA)
    botSay("Procurei. Mas ainda est√° escondido de mim.");
}

function botSay(txt) {
    const chat = document.getElementById("chat");
    const d = document.createElement("div");
    d.className = "bot-box";
    d.innerHTML = `<div class="bubble">${txt}</div>`;
    chat.appendChild(d);
    chat.scrollTop = chat.scrollHeight;
}

function userSay(txt) {
    const chat = document.getElementById("chat");
    const d = document.createElement("div");
    d.className = "user-box";
    d.innerHTML = `<div class="bubble">${txt}</div>`;
    chat.appendChild(d);
    chat.scrollTop = chat.scrollHeight;
}

function send() {
    const i = document.getElementById("userInput");
    if (!i.value) return;
    userSay(i.value);
    think(i.value);
    i.value = "";
}

function autoTrigger(type) {
    if (type === 'piada') {
        userSay("ü§° Piada");
        botSay("Segure o riso que l√° vem piada!");
        setTimeout(() => {
            botSay(DATA.piadas[Math.floor(Math.random()*DATA.piadas.length)]);
        }, 800);
    } else {
        userSay("üí° Curiosidade");
        botSay("l√° vem uma curiosidade.");
        setTimeout(() => {
            botSay(DATA.curiosidades[Math.floor(Math.random()*DATA.curiosidades.length)]);
        }, 800);
    }
}

function setTheme(m) {
    if (m === 'light') document.body.classList.add('light-mode');
    else document.body.classList.remove('light-mode');
}

function setLoading(s) {
    document.getElementById("loading").style.display = s ? "flex" : "none";
}

function startVoice() {
    const rec = new (window.SpeechRecognition || window.webkitSpeechRecognition)();
    rec.lang = 'pt-BR'; rec.start();
    rec.onresult = (e) => { 
        let t = e.results[0][0].transcript;
        document.getElementById("userInput").value = t;
        send();
    };
}

document.getElementById("userInput").addEventListener("keypress", (e) => { if(e.key === "Enter") send(); });
</script>
</body>
</html>
