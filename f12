    async function chatEngine(input) {
        let raw = input.toLowerCase().trim();
        document.getElementById("typing").style.display = "block";

        setTimeout(async () => {
            // MATEM√ÅTICA (Prioridade de G√™nio)
            if (/[0-9]/.test(raw)) {
                try {
                    let calc = raw.replace(/raiz quadrada de/g, "sqrt").replace(/raiz de/g, "sqrt").replace(/vezes/g, "*").replace(/dividido por/g, "/").replace(/[a-z√°√†√¢√£√©√®√™√≠√Ø√≥√¥√µ√∂√∫√ß?]/g, "");
                    let result = math.evaluate(calc);
                    if (result !== undefined) return sendResponse(`Meu n√∫cleo matem√°tico processou: **${input}** √© igual a **${result}**.`);
                } catch(e) {}
            }

            // PIADAS E CURIOSIDADES (OS 70 ITENS)
            if (raw.includes("piada")) return sendResponse("Aqui est√° uma selecionada: " + DATABASE.jokes[Math.floor(Math.random()*DATABASE.jokes.length)]);
            if (raw.includes("curiosidade") || raw.includes("fato")) return sendResponse("Voc√™ sabia? " + DATABASE.facts[Math.floor(Math.random()*DATABASE.facts.length)]);
            
            // ANATOMIA
            for (let key in DATABASE.anatomy) {
                if (raw.includes(key)) return sendResponse(`An√°lise de Anatomia: ${DATABASE.anatomy[key]}`);
            }

            // WIKIP√âDIA (INTELIG√äNCIA GLOBAL)
            let search = raw.replace(/quem e|o que e|fale sobre|pesquise|\?/g, "").trim();
            try {
                const wiki = await fetch(`https://pt.wikipedia.org/api/rest_v1/page/summary/${encodeURIComponent(search)}?origin=*`);
                if (wiki.ok) {
                    const data = await wiki.json();
                    return sendResponse(`De acordo com meus registros globais: ${data.extract}`);
                }
            } catch(e) {}

            // CONVERSA GEN√âRICA (SEMPRE RESPONDE)
            const fallback = [
                "Isso √© fascinante! Infelizmente minha base de dados atual n√£o tem esse detalhe espec√≠fico, mas como um g√™nio, eu adoraria aprender mais sobre isso.",
                "Uma pergunta profunda! Tente me perguntar sobre ci√™ncia, matem√°tica ou anatomia!",
                "Estou processando sua d√∫vida... parece algo complexo. Poderia explicar melhor?",
                "Interessante! Vamos conversar mais sobre isso. O que mais voc√™ sabe?"
            ];
            sendResponse(fallback[Math.floor(Math.random()*fallback.length)]);
        }, 1000);
    }

    function sendResponse(text) {
        document.getElementById("typing").style.display = "none";
        const msgDiv = document.createElement("div");
        msgDiv.className = "message bot-msg";
        msgDiv.innerHTML = `<div class="bubble">${text}</div>`;
        document.getElementById("chat").appendChild(msgDiv);
        document.getElementById("chat").scrollTop = document.getElementById("chat").scrollHeight;
    }

    function sendUserMsg(text) {
        const msgDiv = document.createElement("div");
        msgDiv.className = "message user-msg";
        msgDiv.innerHTML = `<div class="bubble">${text}</div>`;
        document.getElementById("chat").appendChild(msgDiv);
        document.getElementById("chat").scrollTop = document.getElementById("chat").scrollHeight;
    }

    document.getElementById("send-btn").onclick = () => {
        const inp = document.getElementById("userInput");
        if (!inp.value) return;
        sendUserMsg(inp.value);
        chatEngine(inp.value);
        inp.value = "";
    };

    document.getElementById("userInput").onkeypress = (e) => { if (e.key === "Enter") document.getElementById("send-btn").click(); };
</script>
