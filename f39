    "Puxa!", "Caramba!", "Note isso.", "Maravilha.", "Fera!", "Sensacional!", "Eita!", "M√£os √† obra.", "Fui claro?", "Pr√≥ximo passo?"
];

async function brain(val) {
    let raw = val.toLowerCase().trim();
    let t = raw.normalize("NFD").replace(/[\u0300-\u036f]/g, "").replace(/[?!.]/g, "");
    
    // 1. MATEM√ÅTICA AVAN√áADA
    if (/[0-9]/.test(t) && (t.includes("+") || t.includes("-") || t.includes("*") || t.includes("/") || t.includes("x") || t.includes("^"))) {
        try {
            let res = math.evaluate(t.replace(/x/g, "*"));
            return responder(`Roberto, o resultado matem√°tico √©: **${res}**.`);
        } catch(e){}
    }

    // 2. COMANDOS DIRETOS
    if (t.includes("piada")) return responder(DB.piadas[Math.floor(Math.random()*DB.piadas.length)]);
    if (t.includes("curiosidade")) return responder(DB.curiosidades[Math.floor(Math.random()*DB.curiosidades.length)]);

    // 3. TREINO PERSONALIZADO (Quem √© vc / O que faz)
    if (DB.treino[t]) return responder(DB.treino[t]);

    // 4. PESQUISA WIKIPEDIA (11 IDIOMAS)
    if (t.includes("o que e") || t.includes("quem e") || t.includes("pesquise") || t.split(" ").length === 1) {
        exibirAnalisando();
        const wikis = ['pt', 'en', 'es', 'fr', 'de', 'it', 'ru', 'ja', 'zh', 'nl', 'pl'];
        let query = t.replace(/o que e|quem e|pesquise/g, "").trim();
        for (let l of wikis) {
            try {
                const r = await fetch(`https://${l}.wikipedia.org/api/rest_v1/page/summary/${encodeURIComponent(query)}?origin=*`);
                if (r.ok) { 
                    const d = await r.json(); removerAnalisando(); 
                    return responder(`**Inforbot Wiki (${l.toUpperCase()}):** ${d.extract}`); 
                }
            } catch(e){}
        }
        removerAnalisando();
    }

    // 5. MOLDES INTELIGENTES (Apenas se a frase for longa e n√£o houver resposta exata)
    if (t.split(" ").length >= 2) {
        const words = t.split(" ").filter(w => w.length > 3);
        const focus = words.length > 0 ? words[Math.floor(Math.random()*words.length)] : "esse ponto";
        const r1 = moldesInicio[Math.floor(Math.random()*moldesInicio.length)];
        const r2 = moldesMeio[Math.floor(Math.random()*moldesMeio.length)];
        const r3 = moldesFim[Math.floor(Math.random()*moldesFim.length)];
        return responder(r1 + focus + r2 + r3);
    }

    responder("procurei. Mais est√° escondido de mim...?");
}

function responder(texto) {
    const div = document.createElement("div");
    div.className = "bot-box";
    div.innerHTML = `<div class="bubble">${texto}</div>`;
    document.getElementById("chat").appendChild(div);
    document.getElementById("chat").scrollTop = document.getElementById("chat").scrollHeight;
}

function enviar() {
    const input = document.getElementById("input");
    if (!input.value) return;
    const div = document.createElement("div");
    div.className = "user-box";
    div.innerHTML = `<div class="bubble">${input.value}</div>`;
    document.getElementById("chat").appendChild(div);
    brain(input.value);
    input.value = "";
}

function autoAction(tipo) {
    if (tipo === 'piada') brain('piada');
    if (tipo === 'curiosidade') brain('curiosidade');
}

function setTheme(mode) {
    if (mode === 'light') document.body.classList.add('light-mode');
    else document.body.classList.remove('light-mode');
}

function exibirAnalisando() {
    const load = document.createElement("div");
    load.id = "loading-box";
    load.innerHTML = `<div class="analyzing"><div class="spinner"></div> ‚è≥pesquisando...</div>`;
    document.getElementById("chat").appendChild(load);
}

function removerAnalisando() {
    const load = document.getElementById("loading-box");
    if (load) load.remove();
}

function startVoice() {
    const rec = new (window.SpeechRecognition || window.webkitSpeechRecognition)();
    rec.lang = 'pt-BR'; rec.start();
    rec.onresult = (e) => { document.getElementById("input").value = e.results[0][0].transcript; enviar(); };
}

document.getElementById("input").addEventListener("keypress", (e) => { if (e.key === "Enter") enviar(); });
</script>
</body>
</html>
