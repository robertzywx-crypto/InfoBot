// --- MOTOR DE PENSAMENTO DO G√äNIO ---
async function think(msg) {
    let t = msg.toLowerCase().trim().normalize("NFD").replace(/[\u0300-\u036f]/g, "").replace(/[?!.]/g, "");
    
    // 1. PRIORIDADE: PALAVRAS DE SENTIDO √öNICO OU TREINO (EM QUALQUER LUGAR DA FRASE)
    for (let key in INFOR_DB.treino) {
        if (t.includes(key)) {
            return botSay(INFOR_DB.treino[key]);
        }
    }

    // 2. MATEM√ÅTICA AVAN√áADA
    if (/[0-9]/.test(t) && (t.includes("+") || t.includes("-") || t.includes("*") || t.includes("/") || t.includes("^"))) {
        try {
            let res = math.evaluate(t.replace(/x/g, "*"));
            return botSay(`Roberto, a solu√ß√£o l√≥gica √©: **${res}**.`);
        } catch(e){}
    }

    // 3. PESQUISA WIKIPEDIA (11 L√çNGUAS)
    if (t.includes("o que e") || t.includes("quem e") || t.includes("sobre") || t.split(" ").length <= 2) {
        setLoad(true);
        let q = t.replace(/o que e|quem e|sobre/g, "").trim();
        const langs = ['pt', 'en', 'es', 'fr', 'de', 'it', 'ru', 'ja', 'zh', 'nl', 'pl'];
        for (let l of langs) {
            try {
                const r = await fetch(`https://${l}.wikipedia.org/api/rest_v1/page/summary/${encodeURIComponent(q)}?origin=*`);
                if (r.ok) {
                    const d = await r.json(); setLoad(false);
                    return botSay(`**Inforbot Wiki (${l.toUpperCase()}):** ${d.extract}`);
                }
            } catch(e){}
        }
        setLoad(false);
        return botSay("Procurei. Mas ainda est√° escondido de mim.");
    }

    // 4. MOLDES INTELIGENTES (APENAS PARA FRASES LONGAS SEM RESPOSTA DIRETA)
    if (t.split(" ").length >= 4) {
        let p = t.split(" ").filter(w => w.length > 3);
        let f = p.length > 0 ? p[Math.floor(Math.random()*p.length)] : "este t√≥pico";
        let r = INFOR_DB.moldes.ini[Math.floor(Math.random()*250)] + f + INFOR_DB.moldes.meio[Math.floor(Math.random()*250)] + INFOR_DB.moldes.fim[Math.floor(Math.random()*50)];
        return botSay(r);
    }

    // 5. SE TUDO FALHAR
    botSay("Procurei. Mas ainda est√° escondido de mim.");
}

function botSay(txt) {
    const d = document.createElement("div");
    d.className = "bot-box";
    d.innerHTML = `<div class="bubble">${txt}</div>`;
    document.getElementById("chat").appendChild(d);
    document.getElementById("chat").scrollTop = document.getElementById("chat").scrollHeight;
}

function send() {
    const i = document.getElementById("userInput");
    if (!i.value) return;
    const d = document.createElement("div");
    d.className = "user-box";
    d.innerHTML = `<div class="bubble">${i.value}</div>`;
    document.getElementById("chat").appendChild(d);
    think(i.value);
    i.value = "";
}

function autoBtn(type) {
    if (type === 'piada') {
        botSay("Segure o riso que l√° vem piada!");
        setTimeout(() => botSay(INFOR_DB.piadas[Math.floor(Math.random()*INFOR_DB.piadas.length)]), 1000);
    } else {
        botSay("Voc√™ sabia que o mundo √© mais estranho do que parece?");
        setTimeout(() => botSay(INFOR_DB.curiosidades[Math.floor(Math.random()*INFOR_DB.curiosidades.length)]), 1000);
    }
}

function setTheme(m) {
    if (m === 'light') document.body.classList.add('light-mode');
    else document.body.classList.remove('light-mode');
}

function setLoad(s) {
    document.getElementById("loading").style.display = s ? "flex" : "none";
}

function startMic() {
    const rec = new (window.SpeechRecognition || window.webkitSpeechRecognition)();
    rec.lang = 'pt-BR'; rec.start();
    rec.onresult = (e) => { document.getElementById("userInput").value = e.results[0][0].transcript; send(); };
}

document.getElementById("userInput").addEventListener("keypress", (e) => { if (e.key === "Enter") send(); });
</script>
</body>
</html>
