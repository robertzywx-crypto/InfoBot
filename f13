async function brain(input) {
    let t = input.toLowerCase().trim();

    // 1. MATEM√ÅTICA AVAN√áADA
    if (/[0-9]/.test(t)) {
        try {
            let formula = t.replace(/raiz quadrada de/g, "sqrt").replace(/raiz de/g, "sqrt")
                           .replace(/vezes/g, "*").replace(/dividido por/g, "/")
                           .replace(/[a-z√°√†√¢√£√©√®√™√≠√Ø√≥√¥√µ√∂√∫√ß?]/g, "");
            let res = math.evaluate(formula);
            if (res !== undefined) return post(`üî¢ O g√™nio calculou e o resultado √©: **${res}**`, "bot");
        } catch(e) {}
    }

    // 2. CONVERSA B√ÅSICA
    if (t === "oi" || t === "ol√°") return post("Ol√°! Eu sou o InforBot. Como posso te ajudar hoje?", "bot");
    if (t.includes("como voc√™ est√°")) return post("Estou processando dados perfeitamente. E voc√™?", "bot");

    // 3. PIADAS (AS 35)
    if (t.includes("piada")) {
        let p = DB.jokes[Math.floor(Math.random() * DB.jokes.length)];
        return post("ü§£ " + p, "bot");
    }

    // 4. CURIOSIDADES (AS 35)
    if (t.includes("curiosidade") || t.includes("fato") || t.includes("sabia que")) {
        let f = DB.facts[Math.floor(Math.random() * DB.facts.length)];
        return post("üí° " + f, "bot");
    }

    // 5. ANATOMIA E TECNOLOGIA
    for (let key in DB.science) {
        if (t.includes(key)) return post("üß¨ " + DB.science[key], "bot");
    }

    // 6. WIKIP√âDIA INTEGRADA
    let q = t.replace(/quem e|o que e|fale sobre|pesquise|\?/g, "").trim();
    if (q.length > 2) {
        try {
            const wiki = await fetch(`https://pt.wikipedia.org/api/rest_v1/page/summary/${encodeURIComponent(q)}?origin=*`);
            if (wiki.ok) {
                const data = await wiki.json();
                return post(`üåê Encontrei isso: ${data.extract}`, "bot");
            }
        } catch(e) {}
    }

    // 7. RESPOSTA DE G√äNIO
    post("Sua pergunta √© interessante! Meus arquivos n√£o t√™m essa resposta exata agora, mas eu posso te contar uma piada ou resolver um c√°lculo enquanto aprendo sobre isso. O que acha?", "bot");
}

function post(txt, tipo) {
    const chat = document.getElementById("chat");
    const div = document.createElement("div");
    div.className = `message ${tipo}`;
    div.innerHTML = `<div class="bubble">${txt}</div>`;
    chat.appendChild(div);
    chat.scrollTop = chat.scrollHeight;
}

document.getElementById("send").onclick = () => {
    const input = document.getElementById("input");
    if (!input.value) return;
    post(input.value, "user");
    brain(input.value);
    input.value = "";
};

document.getElementById("input").onkeypress = (e) => {
    if (e.key === "Enter") document.getElementById("send").click();
};
