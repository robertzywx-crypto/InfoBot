const synth = window.speechSynthesis;
function responder(texto) {
    synth.cancel();
    const falar = new SpeechSynthesisUtterance(texto);
    falar.lang = 'pt-BR';
    synth.speak(falar);
    const chat = document.getElementById("chat");
    const div = document.createElement("div");
    div.className = "bot-box";
    div.innerHTML = `<div class="bubble">${texto}</div>`;
    chat.appendChild(div);
    chat.scrollTop = chat.scrollHeight;
}

function gerarConversa(frase) {
    const p = frase.split(" ");
    const alvo = p.length > 1 ? p[Math.floor(Math.random()*p.length)] : "isso";
    const moldes = [`Roberto, sobre ${alvo}, eu acho muito interessante!`, `Voc√™ tem raz√£o, Roberto. ${alvo} faz sentido.`, `Me conte mais sobre ${alvo}, Roberto!`, `Interessante voc√™ citar ${alvo}.` ];
    return moldes[Math.floor(Math.random()*moldes.length)];
}

async function brain(val) {
    let t = val.toLowerCase().trim().normalize("NFD").replace(/[\u0300-\u036f]/g, "").replace(/[?!.]/g, "");
    if (t.includes("piada")) return responder(DATABASE.jokes[Math.floor(Math.random()*35)]);
    if (t.includes("curiosidade")) return responder(DATABASE.facts[Math.floor(Math.random()*35)]);
    for (let k in DATABASE.anatomy) { if (t.includes(k)) return responder("üß¨ " + DATABASE.anatomy[k]); }
    if (/[0-9]/.test(t)) { try { let res = math.evaluate(t.replace(/x/g, "*")); return responder(`üî¢ Roberto, resultado: ${res}`); } catch(e){} }
    if (DATABASE.treinamento[t]) return responder(DATABASE.treinamento[t]);
    if (t.split(" ").length > 2) return responder(gerarConversa(val));

    const analise = document.createElement("div");
    analise.innerHTML = `<div class="bubble analyzing"><div class="spinner"></div> Analisando em 11 l√≠nguas...</div>`;
    document.getElementById("chat").appendChild(analise);
    try {
        const r = await fetch(`https://pt.wikipedia.org/api/rest_v1/page/summary/${encodeURIComponent(t)}?origin=*`);
        if (r.ok) { const data = await r.json(); analise.remove(); return responder("üåê Wiki: " + data.extract); }
    } catch(e) {}
    analise.remove();
    return responder("Roberto, n√£o achei isso. Pode falar de outro jeito?");
}

const inputArea = document.getElementById("input");
const btnSend = document.getElementById("send");
function disparar() { if (!inputArea.value) return; const d = document.createElement("div"); d.className = "user-box"; d.innerHTML = `<div class="bubble">${inputArea.value}</div>`; document.getElementById("chat").appendChild(d); brain(inputArea.value); inputArea.value = ""; }
btnSend.onclick = disparar;
inputArea.onkeypress = (e) => { if (e.key === "Enter") disparar(); };
